package javaapplication50;

/**
 *
 * @author vaio
 */
public class JavaApplication50 {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        int flair = 15;
        if(flair >= 15 && flair <37){
            System.out.println("Not enough");
        } // if (flair == 37){
            /*
            There is no connection between first if statement and second if statement 
            so the result will be “Not enough” end of the first statement and 
            it will be also “Too many” end of the else statement. 
            Second if statement must be else if to compile the code correctly. 
            */
             else if (flair == 37){
            System.out.println("Just right");
        } else {
            System.out.println("Too many");
        }
    }
    
}
