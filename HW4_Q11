package javaapplication61;

/**
 *
 * @author vaio
 */
public class JavaApplication61 {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        /*
        int singer = 0;        
        while(singer)
            System.out.println(singer);
        
        The code does not compile because “single” variable is integer. 
        While loop checks boolean conditions.
        */
        
        /*
        To run the code, singer must define as boolean
        */
        boolean singer = true;
        while(singer)
            System.out.println(singer);
    }
    
}
