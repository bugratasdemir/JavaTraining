package javaapplication63;

import java.util.Arrays;
import java.util.List;

/**
 *
 * @author vaio
 */
public class JavaApplication63 {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        List<String> bottles = Arrays.asList("glass","plastic");
                for(int type =0; type < bottles.size() ; ){
                    System.out.print(bottles.get(type) + ",");
                    break;
                }
                System.out.println("end");
                
                /*
                “glass” is the 0 index and “plastic” is the 1st index 
                in the list so output is “glass” end of the for loop. 
                After that it prints “end”. Finally, output is “glass, end”.
                */
    }
    
}
